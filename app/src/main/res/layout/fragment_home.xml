<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.navigation.HomeFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/user_view_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="8:2"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        >
<!--        <androidx.cardview.widget.CardView-->
<!--            android:id="@+id/user_view_image_container"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            app:layout_constraintBaseline_toBottomOf="parent"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            android:layout_weight="1"-->
<!--            >-->
<!--            <ImageView-->
<!--                android:id="@+id/user_view_image"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:importantForAccessibility="no"-->
<!--                android:src="@drawable/ic_empty_avatar"-->
<!--                />-->
<!--        </androidx.cardview.widget.CardView>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/user_view_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_weight="1"
                tools:text="username"
                android:gravity="center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Текущий пользователь"
                tools:ignore="HardcodedText" />

        </LinearLayout>
        <include layout="@layout/template_icon"
            app:src="@{@drawable/ic_exit}"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline2"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/user_view_container"
        android:layout_marginTop="50dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            >

            <include layout="@layout/template_button"
                android:id="@+id/issuance"
                app:title="@{@string/button_invoice}"
                app:icon="@{@drawable/ic_extradition}"
                />
            <include layout="@layout/template_button"
                android:id="@+id/isolator"
                app:title="@{@string/button_isolator}"
                app:icon="@{@drawable/ic_isolator}"
                />

            <include layout="@layout/template_button"
                android:id="@+id/search"
                app:title="@{@string/button_search}"
                app:icon="@{@drawable/ic_search3}"
                />

            <include layout="@layout/template_button"
                android:id="@+id/accept"
                app:title="@{@string/button_receive}"
                app:icon="@{@drawable/ic_receive}"
                />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>