<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/fragment_horizontal_margin"
    android:paddingTop="@dimen/fragment_vertical_margin"
    android:paddingRight="@dimen/fragment_horizontal_margin"
    android:paddingBottom="@dimen/fragment_vertical_margin"
    android:orientation="vertical"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    tools:context=".ui.navigation.login.LoginFragment"
    android:gravity="center_horizontal">
    <TextView
        android:id="@+id/titleAuth"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Авторизация"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        android:layout_weight="15"
        tools:ignore="HardcodedText" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Пожалуйста, введите логин и пароль для доступа к базе данных"
        android:layout_weight="15"
        tools:ignore="HardcodedText" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="15"

        >
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/userLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            >

            <com.example.scanner.ui.views.MyTextInputEditText
                android:id="@+id/user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:selectAllOnFocus="true"
                android:imeOptions="actionDone"
                android:drawableEnd="@drawable/ic_clear_all"
                />

        </com.google.android.material.textfield.TextInputLayout>

<!--        <include layout="@layout/template_text_input" android:id="@+id/user"/>-->
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="15"

        >
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            >

            <com.example.scanner.ui.views.MyTextInputEditText
                android:id="@+id/pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:selectAllOnFocus="true"
                android:imeOptions="actionDone"
                android:drawableEnd="@drawable/ic_clear_all"
                />

        </com.google.android.material.textfield.TextInputLayout>

<!--        <include layout="@layout/template_text_input"-->
<!--            android:id="@+id/pass"/>-->
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"

        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <include layout="@layout/template_button2"
                android:id="@+id/butt"
                />
        </LinearLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:ignore="UselessLeaf" />
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>