<resources >
    <!-- Base application theme. -->
    <style name="SplashScreenTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#1191D4</item>
        <item name="android:windowBackground">@drawable/img_splash</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="Theme.Scanner" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
<!--        <item name="android:windowBackground">@color/base_background</item>-->
        <item name="android:spinnerItemStyle">@style/SpinnerItemStyle</item>
        <item name="tabStyle">@style/CustomTabLayout</item>
        <item name="checkboxStyle">@style/CustomCheckBox</item>
    </style>
    <style name="CustomCheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="buttonTint">@color/selector_check_box</item>
    </style>
    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@color/purple_700</item>
        <item name="tabTextColor">@color/purple_700</item>
        <item name="tabIndicatorColor">@color/purple_700</item>
        <item name="tabTextAppearance">"@style/CustomTextAppearanceTab"</item>
        <item name="tabMode">scrollable</item>
    </style>
    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppIcon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="RowFormContainer">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
    </style>

    <style name="ContentPadding" >
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
    </style>
    <style name="RecyclerItemContainerDataLarge">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="RecyclerItemTextTitleLage" parent="@style/RecyclerItemTextBase">
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="RecyclerItemTextDataLage" parent="@style/RecyclerItemTextBase">
        <item name="android:textStyle">bold</item>
<!--        <item name="android:ellipsize">end</item>-->
<!--        <item name="android:lines">1</item>-->
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">false</item>
        <item name="android:textIsSelectable">true</item>
    </style>
    <style name="RecyclerItemTextTitle" parent="@style/RecyclerItemTextBase">
        <item name="android:layout_marginEnd">5dp</item>
    </style>
    <style name="RecyclerItemTextData" parent="@style/RecyclerItemTextBase">
        <item name="android:textStyle">bold</item>
<!--        <item name="android:ellipsize">end</item>-->
<!--        <item name="android:lines">1</item>-->
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">false</item>
    </style>
    <style name="RecyclerItemTextBase" parent="Widget.AppCompat.TextView">
    </style>

    <style name="ButtonBlue" parent="Widget.AppCompat.Button">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:background">@drawable/background_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="ButtonBlack" parent="Widget.AppCompat.Button">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:background">@drawable/background_black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="ButtonBase" parent="Widget.AppCompat.TextView">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textSize">17sp</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="ButtonHome" parent="@style/ButtonBase">
        <item name="android:drawableEnd">@drawable/ic_arrow_right</item>
        <item name="android:textAlignment">textStart</item>
    </style>
    <style name="NoDim" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimAmount">0.0</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="SpinnerItemStyle" parent="RecyclerItemTextDataLage">
<!--        <item name="android:textSize">20sp</item>-->
<!--        <item name="android:paddingTop">10dp</item>-->
<!--        <item name="android:paddingBottom">10dp</item>-->
    </style>


    <style name="Theme.Scanner.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
<!--        <item name="android:windowTranslucentStatus">true</item>-->
    </style>

    <style name="Theme.Scanner.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="elevation">0dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.Scanner.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>